//- register.jade
extends ./layout.jade

block vars
  - var title = 'Login'
block main-content
  div.container#mnsfade(style="height:100%")
    script.
      document.getElementById('mnsfade').className += ' fade-out'
    div.page-header
      include ./includes/messages.jade
    div.row
      //- some space
      div.form-group &nbsp;
      div.form-group &nbsp;
      form.form-horizontal(method='POST')
        div.col-sm-4.col-sm-offset-4
          p.text-center.
            Registered users sign in here
          div.form-group
            input.form-control(type="hidden", name="_csrf", value=csrfToken)
            input.form-control(type="hidden", name="_domain", value="registered")
            input.form-control(type="email", name="email", placeholder="email", required="true")
          div.form-group
            input.form-control(type="password", name="password", placeholder="password", required="true")
          div.form-group.text-center
            button.btn.btn-primary.btn-lg(type="submit") Log in
      form.form-horizontal(method='POST')
        div.col-sm-4.col-sm-offset-4
          p.text-center.
            IBMers click below to sign in with your
          div.form-group
            input.form-control(type="hidden", name="_csrf", value=csrfToken)
            input.form-control(type="hidden", name="_domain", value="w3id")
          div.form-group.text-center
            button.btn.btn-primary.btn-lg#w3login(type="submit") w3id
